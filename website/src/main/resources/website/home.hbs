<!-- Header -->
{{> header }}

<section id="searchform">
    <div class="jumbotron" id="home-banner">
        <div class="container">
            <h1>{{message "lang.jumbotron1"}} <span>{{nameCount}}</span> {{message "lang.jumbotron2"}}</h1>

            {{> searchcomponent }}
            <p>{{message "lang.oni-message"}} <br> &mdash; Ọọ̀ni Adéyẹyè Ẹniìtàn Ògúnwùsì <em>(Ọ̀jájá II
                .Ọọ̀ni of Ifẹ̀ Kingdom)
            </em></p>

            <h3>{{message "lang.jumboh31"}}</h3>
            <a href="/submitname" class="btn btn-lg btn-link" style="margin-bottom:15px">{{message "lang.jumboh32"}}</a>
        </div>
    </div>
</section>
<!-- /search -->

<section>
    <div class="container">

        <div class="llm row">
            <div class="col-sm-4" id="recent_searches">
                <ul>
                    <li><h5>{{message "lang.latest-search"}}</h5></li>
                    <hr/>
                    {{#each latestSearches}}
                        <li class="recent_entry"><a class="name" href="/entries/{{this}}">{{this}}</a></li>
                    {{/each}}
                </ul>
            </div>
            <div class="col-sm-4" id="recent_additions">
                <ul>
                    <li><h5>{{message "lang.latest-add"}}</h5></li>
                    <hr/>
                    {{#each latestAdditions}}
                        <li class="recent_entry"><a class="name" href="/entries/{{this}}">{{this}}</a></li>
                    {{/each}}
                </ul>
            </div>
            <div class="col-sm-4" id="recent_popular">
                <ul>
                    <li><h5>{{message "lang.most-popular"}}</h5></li>
                    <hr/>
                    {{#each mostPopular}}
                        <li class="recent_entry"><a class="name" href="/entries/{{this}}">{{this}}</a></li>
                    {{/each}}
                </ul>
            </div>
        </div>


        <div class="text-center">
            <h4>{{message "lang.name-listed-by-alphabets"}}:</h4>
            {{> alphabets}}
        </div>

    </div>
    <!-- /llm -->

    <div class="container">
    	<div class="row" style="margin-top: 40px;">
			<div class="col-lg-12 col-lg-offset-0">
			    <div class="text-center">
			        <div class="panel-footer">
			            <h3>{{message "lang.keyboard-software-cta-title"}}</h3>
			            <p>{{message "lang.keyboard-software-cta-text"}}</p>
			            <div class="text-center">
			                <a class="btn btn-success ms-2" href="https://writeyoruba.com/m-checkout" style="margin-top:10px"><i class="fa fa-apple"></i> {{message "lang.keyboard-software-cta-button-mac"}}</a>
			                <a class="btn btn-success ms-2" href="https://writeyoruba.com/w-checkout" style="margin-top:10px"><i class="fa fa-windows"></i> {{message "lang.keyboard-software-cta-button-windows"}}</a>
			            </div>
			        </div>
			    </div>
			</div>
    	</div>

        <div class="row" style="margin-top:40px">
            <div class="col-sm-4 col-sm-offset-2">
                <div class="fb-page" data-href="https://www.facebook.com/YorubaNames" data-small-header="false"
                     data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="false"
                     data-show-posts="false">
                    <div class="fb-xfbml-parse-ignore">
                        <blockquote cite="https://www.facebook.com/YorubaNames"><a href="https://www.facebook.com/YorubaNames">{{message "lang.yoruba-name-dictionary"}}</a></blockquote>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <form method="post" class="subscribe"
                      action="//YorubaName.us10.list-manage.com/subscribe/post?u=447ae670439b332a80e50107c&amp;id=0cfdd9d988"
                      target="_blank">
                    <h4>{{message "lang.yoruba-name-newsletter"}}</h4>
                    <p>{{message "lang.follow-update"}}</p>
                    <input type="hidden" name="b_447ae670439b332a80e50107c_0cfdd9d988" tabindex="-1" value="">
                    <div class="form-group">
                        <input type="email" name="EMAIL" placeholder="{{message "lang.enter-your-email"}}" class="form-control" required="required">
                        <button class="btn btn-success"><i class="fa fa-send"></i></button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</section>

<!-- sidebar -->

<!-- /sidebar -->

<!-- footer -->
{{> footer }}
